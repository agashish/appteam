  <script>
    
    $(".login-form").validate({
			rules: {
        email:"required",
          password: {
              required: true,
              minlength: 5
          }
			},
			messages: {
                email:"Please add a username",
        password:{
            required:"The password is required",
            minlength:"The min is 5 characters"
        }
			},
            submitHandler: function(form,event) {
                event.preventDefault();
                submitForm();
            }
		});

    function submitForm(){

      const userData = {
        email: $('#email').val(),
        password:$('#password').val() 
      };

      $.ajax({
        type: "POST",
        url: '/api/login',
        data: JSON.stringify(userData),
        contentType: 'application/json',
        success: (response) => {          
          window.location.href = '/dashboard'
        },
        error: (response) => {
          console.log('error invoked')             
        }
      })
    }

</script>